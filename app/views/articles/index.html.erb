<h1>Articles</h1>

<%= link_to "Create new", new_article_path(@article)%>

<% @articles.reverse_each do |article| %>
  <div>
    <h3><%= link_to article.title, article_path(article.id) %>
    <%= link_to article_path(article.id), method: :delete, data: { confirm: "Delete #{article.title}?" } do %>
    <i class="fa fa-trash-o" aria-hidden="true"></i>
   <% end %></h3>
  </div>
<% end %>





